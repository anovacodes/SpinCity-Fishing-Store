generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Wishlist {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId        String   @unique
  productHandles String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("wishlists")
}

model Product {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  productHandle String   @unique
  reviews       Review[]

  @@map("products")
}

model Review {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  product       Product  @relation(fields: [productHandle], references: [productHandle])
  productHandle String
  name          String
  message       String
  rating        Int
  createdAt     DateTime @default(now())

  @@map("reviews")
}

model Cart {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId   String   @unique
  cartId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("carts")
}
